OutputFile = "opf.dat";
seed = 1450127657;
system:
{
    //number of unit cells
    dim = [ 25 , 25 , 1 ];
    //The unit cell file
    //This file gives all of the information
    //on the locations of the magnetic system
    unitcellfile="FeRh1.875e-09FePt2.30769e-09.ucf";
    //Number of k-points in each direction
    Nk = [ 4 , 4 , 56 ];
    //lattice constants
    abc = [ 625e-12 , 625e-12 , 4.18269e-09 ];
    //do we include the dipole-dipole calculation?
    include_dipole = FALSE;
    Exchange_method="CSR";
    Dipole_method="fft";
    //if the exchange method is a sparse matrix multiplication
    //then you can specify if you have off-diagonal terms or not.
    //If not then they are ignored.
    Off_Diagonals = FALSE;
    //Do you want to output the unit cell info to the log file?
    log_unit_cell = TRUE;
    Periodic_Boundaries = [ TRUE , TRUE , FALSE ];
};
exchange:
{
    //Exchange reading method 
    //direct (by reading in all interactions directly)
    //permute (take a neighbour and calculate permutations)
    exchmethod="permute";
    OutputExchange=TRUE;
    //How are we to read in the exchange
    //- thisfile (read from the config file)
    //- extfile (read from an external file)
    exchinput="extfile";
    exchfile="FeRh1.875e-09FePt2.30769e-09.exch";
    OutputExchangeMatrix=FALSE;
    ExitAfterExchangeMatrix=FALSE;
    ReadExchangeMatrix=FALSE;
};
sf:
{
    Calculate=FALSE;
    InputFile="sf.in";
};
rscf:
{
    Calculate=FALSE;
};
llg:
{
    dt = 0.2e-15;
    applied = [ 0.0 , 0.0 , -1.0 ];
    update=100;
    MagnetizationCalculationMethod=8;
    //in mesh points
    NoMagDisc = [ 10 , 10 , 10 ];
    //options are "single" or "vtu"
    //single means the data is output in a 7 column format, time - x - y - z - mx - my - mz
    //vtu means the data for each time-step is output in vtu format for reading with paraview
    DiscOutputFormat="vtu";
    OutputMagnetization=TRUE;
    //options are
    // - file - defined through the config file
    // - random - randomized before start of simulation
    SpinConfigMethod="file";
};
cuda:
{
    threadsperblock=256;
};
sim:
{
    sim_type="laserheating";
};
laserheating:
{
    EquilibrationTime = 20e-12;
    RunTime = 150e-12;
    InitialTemperature = 100.0;
    OutputIndividualTimeSeries = TRUE;
    Cl = 4.54e1;
    PumpTime = 100e-15;
    //J/mol/K/s
    G_ep = 1.05e12;
    //Joules/mol/K^2
    Gamma_e = 3.5e-3;
    CoolingTime = 3000.0e-12;
    OutputStructureFactor = FALSE;
    PumpFluence = 80.0e15;
    NumPulses = 1;
    PulseDelays = [ 300e-15 ];
    PulseScale = [ 1.0 ];
    OutputSpinsVTU=TRUE;
    VTUUpdate=10;
    VTUOutputStart=15e-12;

};
